            <option value="tahi">Tahi - L1 Event Space</option>
            <option value="rua">Rua - L2 EDA Staff Office</option>
            <option value="toru">Toru - L2 Room besides Kitchen</option>
            <option value="wha">Wha - GL 1st Office</option>
            <option value="rima">Rima - GL 2nd small Office</option>
            <option value="ono">Ono - L0 Dark Room</option>
            <option value="whitu">Whitu - L0 Transit Lounge</option>
            <option value="waru">Waru - L0 Quiet Room</option>
            <option value="iwa">IWA - L0 Lecture Theatre</option>
            <option value="tekau">Te Kau - L0 Wellbeing Room</option>
          </select>
          <label for="rego">Car Registration Number: </label>
          <input type="text" name="rego">
          <br>
          <button type="submit" name="submit">Register</button>
        </form>
    </div>
  </body>
</html>
